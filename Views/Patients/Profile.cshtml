@model JKLHealthcare.Models.Patient

<h2>Patient Profile</h2>

<div>
    <h3>@Model.FullName</h3>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd-MM-yyyy")</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone Number:</strong> @Model.Number</p>
    <p><strong>Address:</strong> @Model.Address</p>
</div>

<h3>Appointments</h3>

@if (Model.Appointments != null && Model.Appointments.Any())
{
    <table style="width:100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="border-bottom: 1px solid #ddd; padding: 8px; text-align: left;">Date</th>
                <th style="border-bottom: 1px solid #ddd; padding: 8px; text-align: left;">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model.Appointments)
            {
                <tr>
                    <td style="border-bottom: 1px solid #ddd; padding: 8px;">
                        @appointment.AppointmentDateTime.ToString("dd MMMM yyyy, HH:mm")
                    </td>
                    <td style="border-bottom: 1px solid #ddd; padding: 8px;">
                        @appointment.Status
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No appointments found.</p>
}

<div style="margin-top: 20px;">
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>
